<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="8" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/txt_call_record_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_description"
            android:textColor="#0000ff"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/txt_call_record_item_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_description"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/txt_call_record_item_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_description"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_call_record_item_call"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:contentDescription="@string/default_description"
        android:focusable="true"
        android:layout_weight="1"
        android:src="@drawable/call" />
    <ImageView
        android:id="@+id/img_call_record_item_status"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:contentDescription="@string/default_description"
        android:focusable="true"
        android:layout_weight="1"
        android:background="@drawable/arrow" />

</LinearLayout>